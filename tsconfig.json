{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "types": ["node", "electron"]
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "src/index.tsx",
    "src/App.tsx", 
    "src/components/**/*",
    "src/theme.ts",
    "src/types.ts",
    "node_modules",
    "dist"
  ]
}
